<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Home"
    android:paddingBottom="6dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="6dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/patientdash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="110dp"
            android:layout_marginBottom="40dp"
            android:text="@string/patient_meal_plan"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="85dp"
            android:layout_height="1dp"
            android:background="@color/orange"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="520dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/protein"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvprot2"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/glycine_max_soybeans" />

            <Spinner
                android:id="@+id/spinnerprot1"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="1"
                android:layout_column="1"
                android:entries="@array/quantity"
                />

            <TextView
                android:id="@+id/tvprot3"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Vicia faba(beans)" />

            <Spinner
                android:id="@+id/spinnerprot2"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="2"
                android:layout_column="1" />

            <TextView
                android:id="@+id/tvprot4"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="Trigonella foenum-graecum(Fenugreek)" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_row="4"
                android:layout_column="0"
                android:text="@string/starch"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvstarch1"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="5"
                android:layout_column="0"
                android:text="Camellia sinensis(Tea)" />

            <Spinner
                android:id="@+id/spinnerprot3"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="3"
                android:layout_column="1" />

            <Spinner
                android:id="@+id/spinnerstarch1"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:id="@+id/tvstarch2"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="6"
                android:layout_column="0"
                android:text="Cinnamomum verum(cinammon)"
                />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_row="7"
                android:layout_column="0"
                android:text="@string/vitamins"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVit1"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="8"
                android:layout_column="0"
                android:text="Vitis vinifera(grapes)" />

            <TextView
                android:id="@+id/tvVit2"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="9"
                android:layout_column="0"
                android:text="Laurus nobilis(greans)" />

            <TextView
                android:id="@+id/tvVit3"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="10"
                android:layout_column="0"
                android:text="Citrus sinensis(Lemon)" />

            <Spinner
                android:id="@+id/spinnervit1"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="8"
                android:layout_column="1" />

            <Spinner
                android:id="@+id/spinnervit2"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="9"
                android:layout_column="1" />

            <Spinner
                android:id="@+id/spinnervit3"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="10"
                android:layout_column="1" />

            <TextView
                android:id="@+id/tvVit4"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="11"
                android:layout_column="0"
                android:text="Brassica oleracea(cabbages)" />

            <TextView
                android:id="@+id/tvVit5"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_row="12"
                android:layout_column="0"
                android:text="Origanum vulgare(mint)" />

            <Spinner
                android:id="@+id/spinnerstarch2"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="6"
                android:layout_column="1" />

            <Spinner
                android:id="@+id/spinnervit4"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="11"
                android:layout_column="1" />

            <Spinner
                android:id="@+id/spinnervit5"
                android:layout_width="110dp"
                android:layout_height="43dp"
                android:layout_row="12"
                android:layout_column="1" />
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginStart="85dp"
            android:layout_marginEnd="85dp"
            android:layout_height="1dp"
            android:background="@color/orange"
            />

        <Button
            android:id="@+id/patsubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="85dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="18dp"
            android:text="@string/submit"
            android:background="@color/orange"
            android:textColor="@color/black"
            />

    </LinearLayout>

</ScrollView>
