<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Home"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="6dp">

    <TextView
        android:id="@+id/patientdash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="50dp"
        android:text="@string/patient_meal_plan"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="121dp"
            android:layout_height="39dp"
            android:layout_row="0"
            android:layout_column="0"
            android:text="@string/protein"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <Spinner
            android:id="@+id/patspinner"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_row="1"
            android:layout_column="0"
            android:entries="@array/PROTEIN"
            android:outlineSpotShadowColor="@color/orange"
            android:outlineAmbientShadowColor="@color/orange"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="149dp"
            android:layout_height="39dp"
            android:layout_row="0"
            android:layout_column="2"
            android:text="@string/quantity_3"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/patspinner2"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_row="1"
            android:layout_column="2"
            android:entries="@array/quantity"
            android:outlineSpotShadowColor="@color/orange"
            android:outlineAmbientShadowColor="@color/orange"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="119dp"
            android:layout_height="34dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/starch"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="152dp"
            android:layout_height="32dp"
            android:layout_row="2"
            android:layout_column="2"
            android:text="@string/quantity_2"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/patspinner3"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_row="3"
            android:layout_column="0"
            android:outlineSpotShadowColor="@color/orange"
            android:outlineAmbientShadowColor="@color/orange"/>

        <Spinner
            android:id="@+id/patspinner4"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_row="3"
            android:layout_column="2"
            android:outlineSpotShadowColor="@color/orange"
            android:outlineAmbientShadowColor="@color/orange"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="121dp"
            android:layout_height="35dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="@string/vitamins"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="164dp"
            android:layout_height="35dp"
            android:layout_row="4"
            android:layout_column="2"
            android:text="@string/quantyty1"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/patspinner5"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_row="5"
            android:layout_column="0"
            android:outlineSpotShadowColor="@color/orange"
            android:outlineAmbientShadowColor="@color/orange"/>

        <Spinner
            android:id="@+id/patspinner6"
            android:layout_width="193dp"
            android:layout_height="43dp"
            android:layout_row="5"
            android:layout_column="2"
            android:outlineSpotShadowColor="@color/orange"
            android:outlineAmbientShadowColor="@color/orange"/>
    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"
        android:layout_height="1dp"
        android:background="@color/orange"
        />

    <Button
        android:id="@+id/patsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="85dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="80dp"
        android:text="@string/submit"
        android:background="@color/orange"
        android:textColor="@color/black"
        />


</LinearLayout>