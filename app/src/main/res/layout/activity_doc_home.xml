            android:outlineAmbientShadowColor="@color/orange"/>

        <TextView
            android:id="@+id/tvdnab"
            android:layout_width="119dp"
            android:layout_height="34dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/dna_b"
